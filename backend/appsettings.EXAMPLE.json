{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Google": {
      "ClientId": "YOUR_GOOGLE_CLIENT_ID_FROM_GOOGLE_CLOUD_CONSOLE",
      "ClientSecret": "YOUR_GOOGLE_CLIENT_SECRET_FROM_GOOGLE_CLOUD_CONSOLE"
    },
    "Jwt": {
      "Secret": "GENERATE_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARACTERS_LONG",
      "Issuer": "JobHelper",
      "Audience": "JobHelperApp",
      "ExpiryInMinutes": 60
    }
  },
  "Cors": {
    "AllowedOrigins": ["http://localhost:3000"]
  }
}
